{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": false,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./types",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./lib/**/*"
  ]
}
